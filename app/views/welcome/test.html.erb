<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <div class = "well">
            <h1>Welcome To <%= @location %>!</h1>
            <div class = "row">
                <div class = "col-md-7">
                    <p><em>What's the weather like?</em></p>
                    <p>
                        Temperature is: <%= @temp_f %>&deg; / <%= @temp_c %>&deg; C 
                    </p>
                    <p>
                        Feels like: <%= @real_feel %>&deg; F
                    </p>
                </div>    
                <div class = "col-md-5">
                    <p>
                       <%= @weather_words%> <%= image_tag @weather_icon%> 
                    </p>
                    <p>
                        <%=link_to "Full Forecast", @forecast_link, target: "_blank" %>
                    </p>
                </div>
            </div>
        </div>
    </div> 
</div>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-8 column">
        </div>
        <div class="col-md-4 column">
            <%= link_to 'Continue to Search Page', welcome_index_path %>
        </div>
    </div>
</div>